<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSurface">#121212</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
        <item name="materialCardViewStyle">@style/DatepollCardView</item>
        <item name="materialButtonStyle">@style/DatepollButton</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="imageButtonStyle">@style/ImageViewIconStyle</item>
        <item name="floatingActionButtonStyle">@style/floatingActionBtn</item>
    </style>

    <style name="floatingActionBtn" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorWhite</item>
    </style>

    <style name="DatepollButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DatepollCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:colorBackground">#121212</item>

        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="AppTheme.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface" />


    <style name="AppTheme.SettingsMenuItem" parent="AppTheme.NoActionBar">
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="AppTheme.IconBlackGrey" parent="AppTheme.NoActionBar">
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog_dark</item>
    </style>

    <style name="ImageViewIconStyle" parent="Widget.AppCompat.ImageButton">
        <item name="tint">#FFFFFF</item>
    </style>

    <style name="calendar">
        <item name="pagesColor">@color/primaryColor</item>
    </style>

</resources>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="materialCardViewStyle">@style/DatepollCardView</item>
        <item name="appBarLayoutStyle">@style/AppTheme.NoActionBar</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="imageButtonStyle">@style/ImageViewIconStyle</item>
        <item name="floatingActionButtonStyle">@style/floatingActionBtn</item>
        <item name="progressBarStyle">@style/progress_bar</item>
    </style>

    <style name="DatepollCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="floatingActionBtn" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorWhite</item>
    </style>

    <style name="progress_bar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/blueGrey</item>
    </style>

    <style name="AppTheme.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface"/>

    <style name="AppTheme.SettingsMenuItem" parent="AppTheme.NoActionBar">
        <item name="android:tint">#000000</item>
    </style>

    <style name="AppTheme.IconBlackGrey" parent="AppTheme.NoActionBar">
        <item name="android:tint">#000000</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ImageViewIconStyle" parent="Widget.AppCompat.ImageButton">
        <item name="tint">#000000</item>
    </style>


    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>

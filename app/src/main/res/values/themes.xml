<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <attr name="logo" format="reference"/>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blueGrey</item>
        <item name="colorPrimaryDark">@color/blueGreyDarken2</item>
        <item name="colorSecondary">@color/blueGrey</item>

        <item name="android:statusBarColor">@color/blueGreyDarken3</item>
        <item name="appBarLayoutStyle">@style/AppTheme.NoActionBar</item>

        <!-- Components -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="bottomSheetDialogTheme">@style/DatepollBottomSheetDialog</item>
        <item name="cardViewStyle">@style/DatepollCardView</item>
        <item name="materialCardViewStyle">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="floatingActionButtonStyle">@style/DatepollFloatingActionButton</item>
        <item name="progressBarStyle">@style/DatepollProgressBar</item>
        <item name="imageButtonStyle">@style/DatepollImageButtonStyle</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="buttonStyle">@style/DatepollButtonStyle</item>
        <item name="materialButtonStyle">@style/DatepollButtonStyle</item>
        <item name="logo">@drawable/logo_dark</item>
    </style>

    <style name="DatepollButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Icon">

    </style>
    <!-- region BottomNavigation -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="colorSurface">@color/colorWhite</item>
        <item name="itemTextColor">@color/bnv_tab_item_foreground_light</item>
        <item name="itemIconTint">@color/bnv_tab_item_foreground_light</item>
        <item name="elevation">8dp</item>
    </style>
    <!-- endregion -->

    <!-- region BottomSheetDialog -->
    <style name="DatepollBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/DatepollShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="DatepollShapeAppearanceBottomSheetDialog" parent="">
        <item name="cardElevation">4dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <!-- endregion -->

    <!-- region CardView -->
    <style name="DatepollCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">12dp</item>
    </style>
    <!-- endregion -->

    <style name="DatepollImageView" parent="Widget.AppCompat.ImageButton">

    </style>

    <!-- region FloatingActionButton -->
    <style name="DatepollFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorWhite</item>
    </style>
    <!-- endregion -->

    <!-- region ProgressBar -->
    <style name="DatepollProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/blueGrey</item>
    </style>
    <!-- endregion -->

    <!-- region ImageButton -->
    <style name="DatepollImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@android:color/black</item>
    </style>
    <!-- endregion ImageButton -->

    <!-- region Calendar -->
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:buttonTint">@color/colorWhite</item>
    </style>

    <style name="calendar">
        <item name="pagesColor">@android:color/white</item>
    </style>
    <!-- endregion -->

    <style name="DatepollSettingMenuIconOverlay" parent="">
        <item name="android:tint">@android:color/black</item>
    </style>

    <!-- region Typography -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="TextAppearance.App.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="TextAppearance.App.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="TextAppearance.App.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.App.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextAppearance.App.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- endregion -->

</resources>
